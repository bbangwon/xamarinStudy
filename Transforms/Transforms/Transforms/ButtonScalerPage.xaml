<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Transforms.ButtonScalerPage">
    <StackLayout>
        <BoxView Color="Accent" HeightRequest="4" VerticalOptions="EndAndExpand"/>
        <Button Text="Animate Scale" FontSize="Large" BorderWidth="1" HorizontalOptions="Center" Clicked="OnAnimationScaleClicked"/>
        <BoxView Color="Accent" HeightRequest="4" VerticalOptions="StartAndExpand"/>

        <BoxView Color="Accent" HeightRequest="4" VerticalOptions="EndAndExpand"/>
        <Button Text="Animate FontSize" FontSize="Large" BorderWidth="1" HorizontalOptions="Center" Clicked="OnAnimationFontSizeClicked"/>
        <BoxView Color="Accent" HeightRequest="4" VerticalOptions="StartAndExpand"/>
    </StackLayout>
</ContentPage>